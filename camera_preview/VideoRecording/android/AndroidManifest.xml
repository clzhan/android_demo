<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.video"
      android:versionCode="1"
      android:installLocation="auto" android:versionName="1.0">
    <uses-sdk android:minSdkVersion="10"/>
    
	<uses-permission android:name="android.permission.CAMERA"></uses-permission>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
	<uses-permission android:name="android.permission.RECORD_AUDIO"></uses-permission>
	<uses-feature android:name="android.hardware.camera" />
	
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:theme="@android:style/Theme.Light.NoTitleBar">
        <activity android:name=".Cemara" android:screenOrientation="portrait" android:configChanges="orientation">
             <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity android:name=".PlayVideo" android:screenOrientation="portrait" android:configChanges="orientation"></activity>
    </application>
</manifest>